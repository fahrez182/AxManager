<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AxWidget.TextViewCompat" parent="Widget.AppCompat.TextView" >
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AxWidget.SwitchCompat" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:thumb">@drawable/thumb</item>
        <item name="track">@drawable/track</item>
        <item name="textAllCaps">false</item>
        <item name="switchPadding">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
    </style>

    <style name="AxWidget.SwitchCompatFloating" parent="AxWidget.SwitchCompat">
        <item name="android:thumb">@drawable/thumb_floating</item>
        <item name="android:textSize">@dimen/_10sdp</item>
    </style>

    <style name="AxWidget.ButtonCompat" parent="Widget.AppCompat.Button" >
        <item name="android:background">@drawable/button</item>    <!-- warna background -->
        <item name="android:textColor">@android:color/white</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:paddingVertical">@dimen/_7sdp</item>
        <item name="android:paddingHorizontal">@dimen/_12sdp</item>
        <item name="android:textAllCaps">false</item>                  <!-- text normal, bukan CAPS -->
        <item name="android:textSize">@dimen/_12sdp</item>                      <!-- ukuran font -->
    </style>
</resources>