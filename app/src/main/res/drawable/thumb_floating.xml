<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white_text_secondary"/>
            <corners android:radius="@dimen/_4sdp"/>
            <stroke android:width="@dimen/_2sdp" android:color="@color/grey_light_6" />
            <size  android:width="@dimen/_15sdp"
                android:height="@dimen/_15sdp"/>
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:radius="@dimen/_4sdp"/>
            <stroke android:width="@dimen/_2sdp" android:color="?attr/colorPrimary" />
            <size android:width="@dimen/_15sdp"
                android:height="@dimen/_15sdp" />
        </shape>
    </item>
</selector>